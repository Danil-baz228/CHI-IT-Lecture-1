{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "moduleResolution": "node", // Add this line
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".", // Optional
        "paths": { // Optional
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "build"]
}
