{
  "compilerOptions": {
    "target": "ES6",                       
    "module": "commonjs",                  
    "rootDir": "./src",                     
    "outDir": "./dist",                    
    "strict": true,                         
    "experimentalDecorators": true,         
    "emitDecoratorMetadata": true,          
    "esModuleInterop": true,                
    "skipLibCheck": true                    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
